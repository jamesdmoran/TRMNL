<style>
  .arbor-page {
    height: 100%;
    margin: 0 !important;
    padding: 6px 8px 5px !important;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    color: #122216;
    font-family: "Aptos", "Segoe UI", "Helvetica Neue", Arial, sans-serif;
    gap: 7px;
  }

  .arbor-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 12px;
    border-bottom: 1px solid #122216;
    padding-bottom: 5px;
  }

  .arbor-title {
    margin: 0;
    font-size: 30px;
    line-height: 1;
    letter-spacing: -0.02em;
    font-weight: 700;
  }

  .fact-counter {
    margin: 0;
    font-size: 16px;
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    opacity: 0.9;
    white-space: nowrap;
  }

  .arbor-main {
    min-height: 0;
    display: flex;
    flex-direction: column;
    gap: 7px;
  }

  .topic-row {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .topic-label {
    margin: 0;
    font-size: 13px;
    line-height: 1.1;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    opacity: 0.72;
    white-space: nowrap;
  }

  .topic-pill {
    margin: 0;
    display: inline-block;
    padding: 4px 12px;
    border: 1px solid #122216;
    border-radius: 999px;
    font-size: 16px;
    font-weight: 700;
    line-height: 1;
    letter-spacing: 0.11em;
    text-transform: uppercase;
    white-space: nowrap;
  }

  .fact-panel {
    border: 1px solid #122216;
    border-radius: 10px;
    padding: 10px 12px;
  }

  .fact-copy {
    margin: 0;
    font-size: 27px;
    line-height: 1.11;
    font-weight: 540;
    letter-spacing: -0.01em;
  }

  .study-grid {
    margin-top: 2px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
  }

  .study-block {
    border: 1px solid #122216;
    border-radius: 8px;
    padding: 8px 10px;
    min-height: 0;
  }

  .detail-label {
    margin: 0;
    font-size: 13px;
    line-height: 1.1;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    opacity: 0.8;
  }

  .detail-copy {
    margin: 4px 0 0 0;
    font-size: 20px;
    line-height: 1.18;
    font-weight: 520;
    letter-spacing: -0.005em;
  }

  .arbor-footer {
    margin-top: auto;
    padding-top: 4px;
    font-size: 13px;
    line-height: 1.1;
    font-weight: 600;
    letter-spacing: 0.07em;
    text-transform: uppercase;
    opacity: 0.72;
    text-align: right;
  }

  .error-title {
    margin: 0;
    font-size: 28px;
    line-height: 1.02;
    font-weight: 700;
  }

  .error-body {
    margin: 0;
    font-size: 15px;
    line-height: 1.2;
    font-weight: 520;
  }

  @media (max-width: 640px) {
    .study-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="arbor-page">
  {% if status == "ok" %}
    <div class="arbor-header">
      <h1 class="arbor-title">{{ app_title }}</h1>
      <div class="fact-counter">Fact {{ fact.index }} / {{ fact.total }}</div>
    </div>

    <div class="arbor-main">
      <div class="topic-row">
        <div class="topic-label">Topic</div>
        <div class="topic-pill">{{ fact.topic }}</div>
      </div>

      <div class="fact-panel">
        <p class="fact-copy">{{ fact.fact }}</p>
      </div>

      <div class="study-grid">
        <div class="study-block">
          <div class="detail-label">Exam Tip</div>
          <p class="detail-copy">{{ fact.exam_tip }}</p>
        </div>

        <div class="study-block">
          <div class="detail-label">Memory Hook</div>
          <p class="detail-copy">{{ fact.memory_hook }}</p>
        </div>
      </div>
    </div>

    <div class="arbor-footer">
      Updated {{ updated_at_local }}{% if date_key %} - {{ date_key }}{% endif %}
    </div>
  {% else %}
    <h1 class="error-title">Arborism Fact Unavailable</h1>
    <p class="error-body">{{ error | truncate: 220 }}</p>
  {% endif %}
</div>
